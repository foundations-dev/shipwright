{
    "name": "@foundations.dev/shipwright",
    "version": "1.4.0",
    "description": "Shipwright is an abstraction-first CSS philosophy and framework to help you implement your design system effectively.",
    "author": "Earl Man",
    "main": "/dist/np-design-system.css",
    "files": [],
    "private": false,
    "license": "MIT",
    "scripts": {
        "start": "parcel src/*.html",
        "styles": "parcel src/*.html",
        "landing": "parcel landing/index.html",
        "docs": "vuepress dev docs",
        "build:docs": "vuepress build docs",
        "build:landing": "parcel build landing/index.html",
        "build:system": "parcel build src/np-design-system.sass",
        "build": "yarn run build:system",
        "semantic-release": "semantic-release"
    },
    "unpkg": "/dist/np-design-system.css",
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "dist/**/*.{js,css}",
                        "docs",
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": [
                        "dist/**/*.css"
                    ]
                }
            ]
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "maxHeaderWidth": 100,
            "maxLineWidth": 100,
            "defaultType": "",
            "defaultScope": "",
            "defaultSubject": "",
            "defaultBody": "",
            "defaultIssues": ""
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/foundations-dev/Shipwright"
    },
    "keywords": [
        "design system",
        "design",
        "system"
    ],
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-runtime"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:vue/essential"
        ],
        "env": {
            "browser": true,
            "node": true
        },
        "rules": {
            "indent": [
                "error",
                2
            ],
            "vue/no-unused-vars": "error",
            "quotes": [
                "error",
                "double"
            ],
            "no-extra-semi": "off",
            "semi": [
                "error",
                "never"
            ],
            "semi-style": [
                "error",
                "last"
            ],
            "no-console": "off"
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 8,
            "ecmaFeatures": {
                "jsx": true
            }
        }
    },
    "dependencies": {
        "@csstools/postcss-sass": "^4.0.0",
        "autoprefixer": "^9.6.0",
        "commitizen": "^4.0.3",
        "core-js": "^3.4.2",
        "cz-conventional-changelog": "^3.0.2",
        "mini-css-extract-plugin": "^0.8.0",
        "parcel": "^1.12.4",
        "postcss": "^8.2.10",
        "vue": "^2.6.10",
        "vue-server-renderer": "^2.6.10",
        "vuepress-plugin-container": "^2.0.2",
        "webpack": "^4.41.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-0",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-react": "^7.7.4",
        "@semantic-release/changelog": "^3.0.6",
        "@semantic-release/commit-analyzer": "^6.3.3",
        "@semantic-release/git": "^7.0.18",
        "babel-preset-env": "^1.7.0",
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-static-zip": "^0.0.7",
        "postcss-import": "^12.0.1",
        "postcss-url": "^8.0.0",
        "sass": "^1.21.0",
        "semantic-release": "^15.13.31",
        "vuepress": "^1.0.3"
    },
    "engines": {
        "node": ">= 8.6.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not Explorer > 0",
        "IE 11",
        "not ExplorerMobile > 0",
        "not BlackBerry > 0",
        "not OperaMini all",
        "not OperaMobile > 0"
    ],
    "directories": {
        "doc": "docs"
    },
    "parcel-plugin-static-zip": {
        "shipwright.zip": {
            "glob": "**/*",
            "options": {
                "cwd": "../src/"
            }
        }
    }
}
